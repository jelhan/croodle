{
  "scripts": {
    "build": "pnpm run build:client && pnpm run build:api",
    "build:api": "mkdir dist/api && cp -r api/classes api/utils api/composer.json api/composer.lock api/config.default.php api/cron.php api/index.php dist/api && cd dist/api && composer install --no-dev",
    "build:client": "pnpm run --filter @croodle/client build --output-path=../dist",
    "dev": "concurrently \"pnpm:dev:*\" --names \"dev:\" --prefixColors auto",
    "dev:api": "mkdir -p tmp/data && CROODLE__DATA_DIR='../tmp/data/' php -S 127.0.0.1:8000",
    "dev:client": "pnpm run --filter @croodle/client start --proxy http://127.0.0.1:8000",
    "format": "concurrently \"pnpm:format:*\" --names \"format:\" --prefixColors auto",
    "format:client": "pnpm run --filter @croodle/client format",
    "format:translations": "prettier translations/ --write",
    "lint": "concurrently \"pnpm:lint:*\" --names \"lint:\" --prefixColors auto",
    "lint:client": "pnpm run --filter @croodle/client lint",
    "lint:translations": "prettier translations/ --check",
    "preview": "php -S 127.0.0.1:4200 -t dist/",
    "test": "concurrently \"pnpm:test:*\" --names \"test:\" --prefixColors auto",
    "test:api": "cd api && ./vendor/bin/codecept run",
    "test:client": "pnpm run --filter @croodle/client test"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "8.0.1",
    "concurrently": "9.2.1",
    "release-it": "19.0.6"
  },
  "overrides": {
    "@glimmer/validator": "0.95.0",
    "ember-element-helper": "0.8.8"
  },
  "engines": {
    "node": ">= 20"
  },
  "changelog": {
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "i18n": ":abc: Internalization",
      "internal": ":house: Internal"
    }
  },
  "volta": {
    "node": "24.12.0",
    "pnpm": "9.15.9"
  }
}
